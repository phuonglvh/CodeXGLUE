            "cwd": "${workspaceFolder}/Code-Code/code-to-code-trans/evaluator/CodeBLEU",
            "program": "calc_code_bleu.py",
            "args": [
                "--lang",
                "python",
                "--params",
                "0.25,0.25,0.25,0.25",
                "--refs",
                // "../references.txt",
                "${workspaceFolder}/../bigcode-evaluation-harness/datasets/references/codebleu/references_2_py.txt",
                "--hyp",
                // "../predictions.txt",
                "${workspaceFolder}/../bigcode-evaluation-harness/results/codebleu/predictions_py.txt"
