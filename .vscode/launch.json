            "cwd": "${workspaceFolder}/Text-Code/text-to-code",
            "program": "evaluator/evaluator.py",
            "args": [
                "-a",
                // "evaluator/answers.json",
                "${workspaceFolder}/../bigcode-evaluation-harness/datasets/references/bleu/references_2_py.jsonl",
